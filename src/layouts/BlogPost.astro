---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"] & {
  blogPost?: boolean;
  heroImageMini?: boolean;
  pageTitle?: string;
};

const { title, pageTitle, description, pubDate, updatedDate, heroImage, blogPost, heroImageMini } =
  Astro.props;
---

<html lang="fr">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        color: rgb(var(--gray-dark));

        h2 {
          margin-bottom: 1rem;
        }

        h3 {
          margin-bottom: 0.5rem;
        }

        img {
          margin-bottom: 1rem;
        }
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body class="bg-gradient-to-r from-blue-50 to-white">
    <Header />
    <main class="container flex flex-col xl:flex-row gap-5 xl:gap-32 xl:py-8">
      <article class={`xl:w-2/3 ${blogPost ? "" : "c-wysiwig"}`}>
        <h1 class="text-2xl md:text-5xl my-8 text-center">{pageTitle}</h1>
        <div class="hero-image mb-8">
          {heroImage && (
            <img 
              width={heroImageMini ? 480 : 960} 
              height={heroImageMini ? 433 : 375} 
              src={heroImage} 
              alt=""
            />
          )}
        </div>
        <div class="prose">
          <div class="date">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <div class="last-updated-on">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>

          <hr class="mb-5" />

          <slot />
        </div>
      </article>
      <SideBar showPsyInfo={false} />
    </main>
    <Footer />
  </body>
</html>
